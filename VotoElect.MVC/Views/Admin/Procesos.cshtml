@model VotoElect.MVC.ViewModels.AdminProcesosVm
@{
    Layout = "_LayoutEcua";
    ViewData["Title"] = "Procesos";
    ViewData["Navbar"] = "Panel";  // o "Public" o "None"
    ViewData["Footer"] = true;     // o false
}

<div class="container-fluid py-4">
    <h2 class="mb-3">Procesos Electorales</h2>

    @if (!string.IsNullOrWhiteSpace(Model.Ok))
    {
        <div class="alert alert-success">@Model.Ok</div>
    }
    @if (!string.IsNullOrWhiteSpace(Model.Error))
    {
        <div class="alert alert-danger">@Model.Error</div>
    }

    <div class="row">
        <!-- Columna izquierda -->
        <div class="col-lg-5 mb-3">
            <div class="p-4 card-soft">
                <h4 class="mb-3">Crear proceso</h4>

                <form asp-action="CrearProceso" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="font-weight-bold">Nombre</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Elección General 2026" />
                    </div>

                    <div class="mb-3">
                        <label class="font-weight-bold">Tipo de proceso</label>
                        <!-- Bootstrap 4: form-control (no form-select) -->
                        <select asp-for="TipoProceso" class="form-control" required>
                            <option value="Nominal">Nominal</option>
                            <option value="Plurinominal">Plurinominal</option>
                        </select>
                        <div class="small-muted mt-1">
                            Se usa al crear la elección y cargar los candidatos.
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="font-weight-bold">Inicio (UTC)</label>
                        <input asp-for="InicioUtc" type="datetime-local" class="form-control" />
                        <div class="small-muted mt-1">La API trabaja con UTC.</div>
                    </div>

                    <div class="mb-3">
                        <label class="font-weight-bold">Fin (UTC)</label>
                        <input asp-for="FinUtc" type="datetime-local" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Crear</button>
                </form>
            </div>
        </div>

        <!-- Columna derecha -->
        <div class="col-lg-7 mb-3">
            <div class="p-4 card-soft">
                <h4 class="mb-3">Listado</h4>

                <div class="table-responsive">
                    <table class="table w-100">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <th>Estado</th>
                                <th>Padrón</th>
                                <th>Ventana</th>
                                <!-- Bootstrap 4: text-right (no text-end) -->
                                <th class="text-right">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.Procesos)
                            {
                                var sinPadron = !p.PadronCargado;
                                var sinCandidatos = !p.CandidatosCargados;
                            var noPuedeActivar = sinPadron || sinCandidatos;

                       var title = sinPadron
                         ? "Cargue el padrón antes de activar"
                             : sinCandidatos
                       ? "Cargue los candidatos antes de activar"
                               : "";

                                <tr>
                                    <td>
                                        <div style="font-weight:600">@p.Nombre</div>
                                        <div class="text-muted small">
                                            Tipo: @p.Nombre
                                        </div>
                                    </td>


                                    <td>@p.Estado</td>

                                    <td>
                                        @if (p.PadronCargado)
                                        {
                                            <span class="pill pill-ok">Cargado (@p.PadronTotal)</span>
                                        }
                                        else
                                        {
                                            <span class="pill pill-warn">Sin padrón</span>
                                        }
                                    </td>

                                    <!-- evita que la ventana se parta raro -->
                                    <td class="text-nowrap">
                                        @p.InicioUtc.ToString("yyyy-MM-dd HH:mm") — @p.FinUtc.ToString("yyyy-MM-dd HH:mm")
                                    </td>

                                    <td class="text-right text-nowrap">
                                        <a class="btn btn-outline-primary btn-sm"
                                           asp-controller="Admin"
                                           asp-action="Padron"
                                           asp-route-procesoId="@p.ProcesoElectoralId">
                                            Padrón
                                        </a>

                                        <a class="btn btn-outline-secondary btn-sm"
                                           asp-controller="Admin"
                                           asp-action="Candidatos"
                                           asp-route-procesoId="@p.ProcesoElectoralId">
                                            Candidatos
                                        </a>

                                      <form asp-action="Activar" method="post" class="d-inline">
                           @Html.AntiForgeryToken()
                         <input type="hidden" name="procesoId" value="@p.ProcesoElectoralId" />

                    <button type="submit"
                         class="btn btn-outline-dark btn-sm"
                            @(noPuedeActivar ? $"disabled title=\"{title}\"" : "")>
                              Activar
                                   </button>
                                   </form>

                                        <form asp-action="Finalizar" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="procesoId" value="@p.ProcesoElectoralId" />
                                            <button type="submit" class="btn btn-danger btn-sm">Finalizar</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="small-muted">
                    Activar cambia a <b>Activo</b>. Finalizar cambia a <b>Finalizado</b>.
                    <br />
                    *Activar se habilita solo cuando el padrón está cargado (y la API también lo valida).
                </div>
            </div>
        </div>
    </div>
</div>

