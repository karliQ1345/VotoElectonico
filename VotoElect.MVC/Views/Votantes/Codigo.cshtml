@model VotantesCodigoVm
@{
    ViewData["Title"] = "Código de habilitación";
}

<h2>Habilitar votación</h2>
<p class="text-muted">Ingresa el código entregado por el Jefe de Junta.</p>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

<form method="post" asp-action="Codigo" style="max-width:420px;">
    <div class="mb-3">
        <label class="form-label">Código</label>
        <input name="codigoPad" value="@Model.CodigoUnico" class="form-control" required />
    </div>
    <button class="btn btn-success w-100">Continuar</button>
</form>


