@model VotoElect.MVC.ViewModels.AccesoIndexVm
@{
    Layout = "_LayoutEcua";
    ViewData["Navbar"] = "Public";
    ViewData["Footer"] = true;
}

<!-- Hero Start -->
<div id="inicio" class="container-fluid p-0 mb-5">
    <div class="position-relative overlay-bottom">
        <img class="w-100" src="~/img/ecu.jpg" alt="Fondo" style="max-height: 620px; object-fit: cover;">
        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center" style="position:absolute; inset:0;">
            <span class="pill pill-info mb-3">Portal electoral</span>
            <h1 class="display-1 text-white m-0 text-uppercase">EcuaVoto</h1>
            <h3 class="text-white mt-3 mb-4">Acceso por cédula • Gestión por roles • Publicación de resultados</h3>
            <div class="d-flex flex-wrap justify-content-center">
                <a asp-controller="Acceso" asp-action="Index" class="btn btn-primary font-weight-bold py-3 px-5 mr-2 mb-2">
                    <i class="fas fa-sign-in-alt mr-2"></i>Iniciar sesión
                </a>
                <a href="#resultados" class="btn btn-secondary btn-resultados font-weight-bold py-3 px-5 mb-2">
                    <i class="fas fa-chart-bar mr-2"></i>Ver resultados
                </a>
            </div>
            <p class="text-white mt-4 small-muted">
                Nota: Los resultados se mostrarán únicamente cuando el proceso esté finalizado.
            </p>
        </div>
    </div>
</div>
<!-- Hero End -->
<!-- Resultados -->
<div id="resultados" class="container-fluid py-5">
    <div class="container">
        <div class="section-title">
            <h4 class="text-primary text-uppercase" style="letter-spacing: 5px;">Resultados</h4>
            <h1 class="display-4">Publicación oficial</h1>
        </div>

        <div class="row">
            <!-- =========================
                 COLUMNA IZQUIERDA:
                 Estado + Nacional (uno debajo del otro)
                 ========================= -->
            <div class="col-12 mb-4">
                <!-- Estado del proceso -->
                <div class="p-4 card-soft mb-3">
                    <div class="d-flex align-items-start justify-content-between">
                        <div>
                            <h4 class="mb-1">Estado del proceso</h4>
                            <p class="m-0 small-muted">Se actualiza automáticamente cuando el Administrador cierra el proceso.</p>
                        </div>
                        <span id="estadoPill" class="pill pill-warn">En proceso</span>
                    </div>
                    <hr>
                    <p class="m-0">
                        <i class="fas fa-clock mr-2 text-primary"></i>
                        <b>Ventana:</b> <span id="rangoProceso">--</span>
                    </p>
                    <p class="m-0 mt-2">
                        <i class="fas fa-info-circle mr-2 text-primary"></i>
                        <b>Mensaje:</b> <span id="estadoMsg">--</span>
                    </p>
                </div>

                <!-- Resultados nacionales -->
                <div class="p-4 card-soft">
                    <h4 class="mb-3">Resultados nacionales</h4>

                    <div id="bloqueEnProceso" class="p-3" style="border-radius:14px; background: rgba(255,255,255,.55);">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-hourglass-half text-primary mr-3" style="font-size: 1.4rem;"></i>
                            <div>
                                <div class="font-weight-bold">Proceso electoral en proceso</div>
                                <div class="small-muted">Los resultados se visualizarán después de su finalización.</div>
                            </div>
                        </div>
                    </div>

                    <div id="bloqueFinalizado" style="display:none;">
                        <div class="p-3 mb-3" style="border-radius:14px; background: rgba(255,255,255,.55);">
                            <div class="small-muted mb-1">Total votos</div>
                            <div class="display-4 m-0" id="totalVotos">0</div>
                        </div>

                        <div class="p-3" style="border-radius:14px; background: rgba(255,255,255,.55);">
                            <div class="font-weight-bold mb-2">Distribución</div>

                            <!-- Gráfico nacional -->
                            <div style="height: 260px;">
                                <canvas id="chartNacional"></canvas>
                            </div>

                            <hr>
                            <div class="small-muted">*En el sistema real estos datos vendrán de los reportes de cada Junta.</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- =========================
                 COLUMNA DERECHA:
                 Reportes y filtros (Gráfica reemplaza tabla)
                 ========================= -->
            <div class="col-12 mb-4">
                <div class="p-4 card-soft">
                    <div class="d-flex flex-wrap align-items-end justify-content-between">
                        <div>
                            <h4 class="mb-1">Reportes y filtros</h4>
                            <p class="m-0 small-muted">Filtros (Provincia, Cantón, Parroquia, Género).</p>
                        </div>

                        <div class="d-flex gap-2">
                            <select id="dimensionSelect" class="form-control" style="min-width:220px;">
                                <option value="Provincia">Provincia</option>
                                <option value="Canton">Cantón</option>
                                <option value="Parroquia">Parroquia</option>
                                <option value="Genero">Género</option>
                            </select>
                        </div>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="font-weight-bold" id="tituloFiltros">Distribución</div>
                        <div class="small-muted">Actualizado (UTC): <b id="actualizadoFiltros">--</b></div>
                    </div>

                    <div id="msgFiltros" class="small-muted mb-2"></div>

                    <!-- Gráfico filtros -->
                    <div id="bloqueChartFiltros" style="display:none;">
                        <div style="height: 360px;">
                            <canvas id="chartFiltros"></canvas>
                        </div>
                        <div class="small-muted mt-2">
                            Total votos contabilizados en esta vista: <b id="totalVistaFiltros">0</b>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /row -->
    </div>
</div>

@section Scripts {
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

    <script>
        // =========================
        // Helpers UI
        // =========================
        const estadoPill = document.getElementById("estadoPill");
        const estadoMsg  = document.getElementById("estadoMsg");
        const rangoProceso = document.getElementById("rangoProceso");

        const bloqueEnProceso  = document.getElementById("bloqueEnProceso");
        const bloqueFinalizado = document.getElementById("bloqueFinalizado");

        const dimensionSelect = document.getElementById("dimensionSelect");

        const tituloFiltros = document.getElementById("tituloFiltros");
        const actualizadoFiltros = document.getElementById("actualizadoFiltros");
        const msgFiltros = document.getElementById("msgFiltros");
        const bloqueChartFiltros = document.getElementById("bloqueChartFiltros");
        const totalVistaFiltros = document.getElementById("totalVistaFiltros");

        function escapeHtml(str) {
            return String(str ?? "")
                .replaceAll("&", "&amp;")
                .replaceAll("<", "&lt;")
                .replaceAll(">", "&gt;")
                .replaceAll('"', "&quot;")
                .replaceAll("'", "&#039;");
        }

        function getVotos(x) {
            return Number(x?.votos ?? x?.Votos ?? 0);
        }

        function getOpcion(x) {
            return String(x?.opcion ?? x?.Opcion ?? "");
        }

        function setTexto(id, text) {
            const el = document.getElementById(id);
            if (el) el.textContent = text ?? "";
        }

        function setPill(text, cls) {
            if (!estadoPill) return;
            estadoPill.className = cls;
            estadoPill.textContent = text;
        }

        function mostrarEnProceso(enProceso) {
            if (bloqueEnProceso) bloqueEnProceso.style.display = enProceso ? "" : "none";
            if (bloqueFinalizado) bloqueFinalizado.style.display = enProceso ? "none" : "";
        }

        function fmt(d) {
            if (!(d instanceof Date) || isNaN(d.getTime())) return "--";
            return d.toISOString().slice(0, 16).replace("T", " ");
        }

        // =========================
        // Estado global
        // =========================
        let _procesoIdActual = null;
        let _chartNacional = null;
        let _chartFiltros = null;

        // =========================
        // Chart Nacional: barras con % arriba
        // =========================
        function buildChartNacional(labels, values, tipo /* 'bar' | 'pie' */) {
            const canvas = document.getElementById("chartNacional");
            if (!canvas) return;

            if (_chartNacional) {
                _chartNacional.destroy();
                _chartNacional = null;
            }

            const total = values.reduce((a, b) => a + b, 0);

            const pluginPct = {
                id: "pctLabels",
                afterDatasetsDraw(chart) {
                    if (chart.config.type !== "bar") return;

                    const { ctx } = chart;
                    const meta = chart.getDatasetMeta(0);

                    ctx.save();
                    ctx.font = "12px sans-serif";
                    ctx.fillStyle = "#333";
                    ctx.textAlign = "center";
                    ctx.textBaseline = "bottom";

                    meta.data.forEach((bar, i) => {
                        const v = values[i] || 0;
                        if (v <= 0 || total <= 0) return;

                        const pct = Math.round((v * 100) / total) + "%";
                        ctx.fillText(pct, bar.x, bar.y - 8);
                    });

                    ctx.restore();
                }
            };

            _chartNacional = new Chart(canvas, {
                type: tipo,
                data: {
                    labels,
                    datasets: [{
                        label: "Votos",
                        data: values
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    layout: { padding: { top: 18 } }, // evita que se corte %
                    plugins: {
                        legend: { display: tipo !== "bar" }
                    },
                    scales: tipo === "bar" ? {
                        y: { beginAtZero: true, ticks: { precision: 0 } }
                    } : {}
                },
                plugins: [pluginPct]
            });
        }

        // =========================
        // Chart Filtros: agrupada, leyenda clickeable, tooltip SOLO barra hover
        // =========================
        function buildGroupedChartFiltros(dimLabels, candidatosDatasets) {
            const canvas = document.getElementById("chartFiltros");
            if (!canvas) return null;

            if (_chartFiltros) {
                _chartFiltros.destroy();
                _chartFiltros = null;
            }

            _chartFiltros = new Chart(canvas, {
                type: "bar",
                data: {
                    labels: dimLabels,
                    datasets: candidatosDatasets
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,

                    interaction: {
                        mode: "nearest",
                        intersect: true
                    },

                    plugins: {
                        legend: {
                            display: true,
                            labels: { font: { size: 12 } }
                        },
                        tooltip: {
                            enabled: true,
                            mode: "nearest",
                            intersect: true,
                            titleFont: { size: 14 },
                            bodyFont: { size: 14 },
                            callbacks: {
                                title: (items) => items?.[0]?.label ?? "",
                                label: (ctx) => {
                                    const name = ctx.dataset?.label ?? "Opción";
                                    const v = ctx.parsed?.y ?? 0;
                                    return `${name}: ${v}`;
                                }
                            }
                        }
                    },

                    scales: {
                        x: { ticks: { autoSkip: false, maxRotation: 0, minRotation: 0 } },
                        y: { beginAtZero: true, ticks: { precision: 0 } }
                    }
                }
            });

            return _chartFiltros;
        }

        // =========================
        // Cargar Estado
        // =========================
        async function cargarEstadoYResultados() {
            try {
                const estadoResp = await fetch("/Resultados/Estado");
                const estadoJson = await estadoResp.json();

                if (!estadoJson.ok) {
                    setTexto("estadoMsg", estadoJson.message || "Sin proceso.");
                    setTexto("rangoProceso", "--");
                    setPill("Sin proceso", "pill pill-warn");
                    mostrarEnProceso(true);
                    _procesoIdActual = null;

                    msgFiltros.textContent = "";
                    bloqueChartFiltros.style.display = "none";
                    return;
                }

                const p = estadoJson.data || {};
                const procesoId = p.procesoElectoralId || p.ProcesoElectoralId;
                const estado = String(p.estado || p.Estado || "");

                _procesoIdActual = procesoId;

                const inicio = new Date(p.inicioUtc || p.InicioUtc);
                const fin = new Date(p.finUtc || p.FinUtc);
                setTexto("rangoProceso", `${fmt(inicio)} — ${fmt(fin)}`);

                const esActivo = estado.toLowerCase().includes("activo");

                if (esActivo) {
                    setPill("En proceso", "pill pill-warn");
                    setTexto("estadoMsg", "Proceso electoral en proceso; resultados parciales.");
                    mostrarEnProceso(true);
                } else {
                    setPill("Finalizado", "pill pill-ok");
                    setTexto("estadoMsg", "Resultados publicados.");
                    mostrarEnProceso(false);
                }

                await cargarNacional();
                await cargarFiltros();

            } catch (e) {
                setTexto("estadoMsg", "Error consultando el estado.");
                setTexto("rangoProceso", "--");
                setPill("Error", "pill pill-warn");
                mostrarEnProceso(true);
                _procesoIdActual = null;

                msgFiltros.textContent = "";
                bloqueChartFiltros.style.display = "none";
            }
        }

        // =========================
        // Nacional: usa Tabla?dimension=Nacional para mostrar TODO
        // =========================
        async function cargarNacional() {
            if (!_procesoIdActual) return;

            // total grande
            const resNat = await fetch(`/Resultados/Nacional?procesoId=${encodeURIComponent(_procesoIdActual)}`);
            const nat = await resNat.json();
            if (!nat.ok) return;

            const total = Number(nat.totalVotos || 0);
            setTexto("totalVotos", total.toLocaleString("es-EC"));

            // mapa GUID->nombre
            const mapResp = await fetch(`/Resultados/BoletaMap?procesoId=${encodeURIComponent(_procesoIdActual)}`);
            const mapJson = await mapResp.json();
            const map = (mapJson.ok && mapJson.map) ? mapJson.map : {};

            // TODO nacional desde Tabla
            const resNatTabla = await fetch(`/Resultados/Tabla?dimension=Nacional&procesoId=${encodeURIComponent(_procesoIdActual)}`);
            const natTabla = await resNatTabla.json();
            if (!natTabla.ok) return;

            const itemsNat = (natTabla.items || []).slice();
            itemsNat.sort((a, b) => getVotos(b) - getVotos(a));

            const labels = [];
            const values = [];

            for (const it of itemsNat) {
                const v = getVotos(it);
                const op = getOpcion(it);
                const name = (map && map[op]) ? map[op] : (op || "N/D");
                if (v > 0) {
                    labels.push(name);
                    values.push(v);
                }
            }

            buildChartNacional(labels, values, "bar");
        }

        // =========================
        // Filtros: gráfica reemplaza tabla
        // - Agrupa por DimensionValor (x-axis)
        // - Cada candidato/lista = dataset (legend clickeable)
        // =========================
        async function cargarFiltros() {
            if (!_procesoIdActual) return;

            const dim = (dimensionSelect?.value || "Provincia");
            msgFiltros.textContent = "Cargando reporte...";
            bloqueChartFiltros.style.display = "none";

            try {
                // mapa GUID->nombre
                const mapResp = await fetch(`/Resultados/BoletaMap?procesoId=${encodeURIComponent(_procesoIdActual)}`);
                const mapJson = await mapResp.json();
                const map = (mapJson.ok && mapJson.map) ? mapJson.map : {};

                // tabla dimension
                const res = await fetch(`/Resultados/Tabla?dimension=${encodeURIComponent(dim)}&procesoId=${encodeURIComponent(_procesoIdActual)}`);
                const data = await res.json();

                if (!data.ok) {
                    msgFiltros.textContent = data.message || "Sin datos.";
                    bloqueChartFiltros.style.display = "none";
                    return;
                }

                const items = (data.items || []);
                const actualizadoUtc = data.actualizadoUtc;

                // título + actualizado
                tituloFiltros.textContent = `Distribución - ${dim}`;
                actualizadoFiltros.textContent = actualizadoUtc
                    ? String(actualizadoUtc).replace("T", " ").substring(0, 16)
                    : "--";

                if (!items.length) {
                    msgFiltros.textContent = "Sin datos para esta dimensión.";
                    bloqueChartFiltros.style.display = "none";
                    return;
                }

                // Dim labels (x): lista de dimensionValor
                const dimSet = new Map(); // preserve order
                for (const it of items) {
                    const dv = String(it.dimensionValor ?? it.DimensionValor ?? "").trim();
                    if (!dimSet.has(dv)) dimSet.set(dv, true);
                }
                const dimLabels = Array.from(dimSet.keys()).filter(x => x);

                // Opciones (datasets): cada candidato/lista/blanco
                const opcSet = new Map();
                for (const it of items) {
                    const op = getOpcion(it);
                    if (!opcSet.has(op)) opcSet.set(op, true);
                }
                const opciones = Array.from(opcSet.keys()).filter(x => x);

                // Matriz: opcion -> array aligned a dimLabels
                const indexDim = new Map(dimLabels.map((d, i) => [d, i]));
                const matrix = {};
                for (const op of opciones) matrix[op] = new Array(dimLabels.length).fill(0);

                let totalVista = 0;

                for (const it of items) {
                    const dv = String(it.dimensionValor ?? it.DimensionValor ?? "").trim();
                    const op = getOpcion(it);
                    const v = getVotos(it);

                    const i = indexDim.get(dv);
                    if (i === undefined) continue;

                    matrix[op][i] = (matrix[op][i] || 0) + v;
                    totalVista += v;
                }

                // Datasets: label traducido y data
                const datasets = opciones.map(op => {
                    const name = (map && map[op]) ? map[op] : (op || "N/D");
                    return {
                        label: name,
                        data: matrix[op]
                    };
                });

                // Render chart
                buildGroupedChartFiltros(dimLabels, datasets);

                totalVistaFiltros.textContent = String(totalVista);
                msgFiltros.textContent = "";
                bloqueChartFiltros.style.display = "";

            } catch (err) {
                msgFiltros.textContent = "Error al cargar reporte.";
                bloqueChartFiltros.style.display = "none";
            }
        }

        // =========================
        // Eventos
        // =========================
        if (dimensionSelect) {
            dimensionSelect.addEventListener("change", () => cargarFiltros());
        }

        document.addEventListener("DOMContentLoaded", () => cargarEstadoYResultados());
    </script>
}


