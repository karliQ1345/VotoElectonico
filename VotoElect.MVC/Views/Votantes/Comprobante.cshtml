@model VotantesComprobanteVm
@{
    ViewData["Title"] = "Comprobante";
    ViewData["BodyClass"] = "layout-root layout-votante";
    ViewData["Navbar"] = "None";
    ViewData["Footer"] = false;
    ViewData["MainClass"] = "layout-main p-0";
}

<div class="vote-shell">
    <div class="vote-card bg-white p-4 p-md-5 rounded shadow">

        <h2 class="mb-3">Voto registrado</h2>

        <div class="alert alert-success">
            @Model.Mensaje
        </div>

        @if (!string.IsNullOrWhiteSpace(Model.PapeletaUrl))
        {
            <div class="mt-3">
                <a class="btn btn-primary w-100" href="@Model.PapeletaUrl" target="_blank">
                    Ver papeleta / comprobante
                </a>
            </div>
        }

        @if (Model.PapeletaEnviada)
        {
            <div class="alert alert-info mt-3 mb-0">
                Papeleta enviada a: <b>@Model.EmailEnmascarado</b>
            </div>
        }
        else
        {
            <div class="alert alert-warning mt-3 mb-0">
                No se pudo enviar la papeleta por correo (puedes revisar configuración de Brevo).
            </div>
        }

        <div class="d-grid gap-2 mt-4">
            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Finalizar</a>
        </div>

    </div>
</div>



