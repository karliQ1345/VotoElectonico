@model VotantesCodigoVm
@{
    ViewData["BodyClass"] = "layout-root layout-votante";
    ViewData["Navbar"] = "None";   
    ViewData["Footer"] = false;   
}


<div class="container-fluid p-0 page-header position-relative overlay-bottom">
    <div class="d-flex align-items-center justify-content-center min-vh-100 px-3">
        <div class="bg-white p-4 p-md-5 rounded shadow w-100" style="max-width: 980px;">
            <h2 class="mb-2">Habilitar votación</h2>
            <p class="text-muted mb-4">Ingresa el código entregado por el Jefe de Junta.</p>`

            @if (!string.IsNullOrWhiteSpace(Model.Error))
            {
                <div class="alert alert-danger">@Model.Error</div>
            }

            <form method="post" asp-action="Codigo">
                <div class="mb-3">
                    <label class="form-label">Código</label>
                    <input name="codigoPad" value="@Model.CodigoUnico" class="form-control" required />
                </div>

                <button class="btn btn-success w-100">Continuar</button>
            </form>
        </div>
    </div>

</div>



