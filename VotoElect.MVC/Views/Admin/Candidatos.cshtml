@model VotoElect.MVC.ViewModels.AdminCandidatosVm
@{
    ViewData["Title"] = "Gestionar Candidatos";
    Layout = "_LayoutVotoSimpleFooter";
}
<h2>Carga masiva de candidatos</h2>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}
@if (!string.IsNullOrWhiteSpace(Model.Ok))
{
    <div class="alert alert-success">@Model.Ok</div>
}

<div class="row g-4 mt-2">
     <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Carga masiva de candidatos</h5>
                <p class="small text-muted mb-3">
                    El Excel no requiere el ID del proceso; se asigna automáticamente según el proceso seleccionado.
                </p>
                <form asp-action="CargarCandidatos" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Proceso</label>
                            <select class="form-select" asp-for="ProcesoElectoralId" required>
                                <option value="">-- Selecciona un proceso --</option>
                                @foreach (var p in Model.Procesos)
                                {
                                    <option value="@p.ProcesoElectoralId" selected="@(p.ProcesoElectoralId == Model.ProcesoElectoralId ? "selected" : null)">
                                        @p.Nombre (@p.Estado)
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Tipo de elección</label>
                            <select class="form-select" asp-for="Tipo" required>
                                <option value="Presidente_SiNoBlanco">Presidentes (SI/NO/BLANCO)</option>
                                <option value="Asambleistas">Asambleístas</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Máx selección individual (solo Asambleístas)</label>
                            <input class="form-control" type="number" min="1" asp-for="MaxSeleccionIndividual" />

                        </div>
                      <div class="col-md-12">
                          <label class="form-label">Archivo Excel</label>
                            <input class="form-control" type="file" name="excel" accept=".xlsx,.xls" required />
                        </div>
                    </div>
                    <input type="hidden" asp-for="CargaEleccionId" />
                    <input type="hidden" asp-for="Titulo" />
                    <button class="btn btn-outline-primary mt-3">Cargar candidatos</button>
                </form>
            </div>
        </div>
    </div>
</div>


                  